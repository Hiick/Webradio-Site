<!DOCTYPE html>
<html lang="en">
    {% include 'admin/head.html.twig' %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {% include 'admin/sidebar.html.twig' %}
        <!-- Main Content -->
        <div id="content">
            {% include 'admin/navigation.html.twig' %}
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div>
                    <div class="row mb-1">
                        <div class="col-xl-6  usernameChannel">
                            <span class="text-black" id="nom"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6 d-flex">
                            <a class="retour mt-auto mb-1" href="{{ path('admin.channel.index') }}" >
                                <i id="fleche-retour" class="fas fa-long-arrow-alt-left"></i>
                                <button id="bouton-retour" class="btn btn-sm rounded-pill">retour</button>
                            </a>
                        </div>
                    </div>
                    <div class="main d-flex flex-column align-items-center justify-content-center">

                        <!--img logo-->
                        <div class="image-upload">
                            <label for="cameraInput">
                                <img src="{{ channel.avatar }}" alt="" id="profil">
                                <i class="far fa-edit" style="font-size:50px; color: #EF0051"></i>
                            </label>
                            <input type="file" accept="image/*" id="cameraInput">
                        </div>

                        <!--input-->
                        <div class="row mb-1">
                            <div class="col-sm">
                                <div class="form-group editchannel" >
                                     <input type='text' id="channels" class='form-control text-center text-black' placeholder='nom de la chaine' value='{{channel.nomChaine}}'> 
                                </div>
                                <div class="form-group editchannel">
                                    <button id="button-settingsAdmin" class="form-control border-0 font-weight-bold text-white" style="background-color:#EF0051;" >Enregistrer</button>
                                </div>
                                
                            </div>
                        </div>
                    </div>  
            </div>
                <!--diviver -->
               <hr class="sidebar-divider d-none d-md-block">

                    <!-- Content Row -->
                    <div class="row">

                    <!-- Nombre d’utilisateurs Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-80 border-raduis py-2">
                        <div class="card-body">
                            <div class="row">
                                <div class="col mr-2 mb-2 d-flex flex-column align-items-center justify-content-center">
                                    <div class="text-principal justify-content-center">Nombre d’utilisateurs</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">98’578</div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>

                    <!-- Nombre d’abonnés Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-80 border-raduis py-2">
                        <div class="card-body">
                            <div class="row">
                                <div class="col mr-2 mb-2 d-flex flex-column align-items-center justify-content-center">
                                    <div class="text-bleue">Nombre d’abonnés</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">44’577</div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>

                    <!-- Total d'écoutes Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-80 border-raduis py-2">
                        <div class="card-body">
                            <div class="row">
                                <div class="col mr-2 d-flex flex-column align-items-center justify-content-center">
                                    <div class="text-turquoise">Total d'écoutes</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">453’987</div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>

                    <!-- Nombre de chaînes créée Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card shadow h-80 border-raduis py-2">
                        <div class="card-body">
                            <div class="row">
                                <div class="col mr-2  mb-2 d-flex flex-column align-items-center justify-content-center">
                                    <div class="text-purple">Nombre de chaînes créée</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">24’767</div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>

                <!-- /Content Row -->
                    <!-- Content Row -->
                    <div class="row">

                    <!-- Area Chart -->
                    <div class="col-xl-8 col-lg-7">
                        <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header d-flex flex-row align-items-center justify-content-between">
                            <h6 class="text-purple">Nombre d’inscrits par mois</h6>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="chart-area">
                            <canvas id="myAreaChart"></canvas>
                            </div>
                        </div>
                        </div>
                    </div>
                    <!-- Pie Chart -->
                    <div class="col-xl-4 col-lg-5">
                        <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header d-flex flex-row align-items-center justify-content-between">
                            <h6 class="text-purple">Nombre d’abonnements par jour</h6>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="chart-pie pt-4 pb-2">
                            <canvas id="myPieChart"></canvas>
                            </div>
                            <div class="mt-4 text-center small">
                            <span class="mr-2 text-black">
                                <i class="fas fa-circle text-primary"></i> Lundi
                            </span>
                            <span class="mr-2 text-black">
                                <i class="fas fa-circle text-success"></i> Mercredi 
                            </span>
                            <span class="mr-2 text-black">
                                <i class="fas fa-circle text-info"></i> Samedi
                            </span>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                <!-- /Content Row -->
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

{% include 'admin/Channel/editChannel/script.html.twig' %}

</body>

</html>