<!DOCTYPE html>
<html lang="en">
    {% include 'Users/head.html.twig' %}
    {% block stylesheets %}
         <link rel="stylesheet" href="{{ asset('css/darkmode/darkmode.css')}}">
    {% endblock %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    {% include 'Users/sidebar.html.twig' %}
        <!-- Main Content -->
        <div id="content">
            {% include 'Users/navigation.html.twig' %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-10 d-flex flex-column align-items-center justify-content-center">
                        <div class="titre-setting">
                            <h1 class="h2 mt-2 text-black">Gestion du compte</h1>
                        </div>
                    </div>
                    <div class="col-xl-2">
                        <ul>
                            <li>
                                <input id="s1" type="checkbox" class="switch">
                                <label for="s1" class="text-black">Dark Mode</label>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="main d-flex flex-column align-items-center justify-content-center">

                    <!--img logo-->
                    <div class="image-upload">
                        <label for="cameraInput">
                            <img src="{{ user.avatar }}" alt="" id="profil">
                            <i class="far fa-edit" style="font-size:50px; color: #EF0051"></i>
                        </label>
                        <input type="file" accept="image/*" id="cameraInput">
                    </div>

                    <!--input-->

                    
                    <div class="row mb-5">
                        <div class="col-sm">
                            <div class="form-group setting">
                                <input type='text' id="username" class='form-control text-center text-black' placeholder='username' value='{{user.username}}'>
                            </div>
                            
                            <div class="form-group setting">
                                 <input type='text' id="email" class='form-control text-center text-black' placeholder='Email' value='{{user.email}}'>
                            </div>

                            <div class="form-group setting">
                                <input type='text' id="channels" class='form-control text-center text-black' placeholder='nom de la chaine' value='{{user.channels}}'>
                            </div>

                            <div class="form-group setting">
                                <input type="submit" id="envoyer" class="form-control border-0 font-weight-bold text-white" style="background-color:#EF0051;" value="Enregistrer">
                            </div>
                        </div>
                </div>  
            </div>
        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span class="text-black">Copyright &copy; Webradio - Stream - 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

{% include 'Users/Settings/script.html.twig' %}

